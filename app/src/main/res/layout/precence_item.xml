<?xml version="1.0" encoding="utf-8"?>
<com.servo.apptendance.views.FancyLayoutBK
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/len_4"
    android:padding="@dimen/len_4"
    android:enabled="false"
    app:fl_defaultColor="@color/white_alpha_112"
    app:fl_disabledColor="@color/white_alpha_112"
    app:fl_borderWidth="@dimen/len_1"
    app:fl_borderColor="@color/colorListeVide"
    app:fl_radiusTopLeft="@dimen/len_1"
    app:fl_radiusTopRight="@dimen/len_8"
    app:fl_radiusBottomLeft="@dimen/len_8"
    app:fl_radiusBottomRight="@dimen/len_8"

    tools:fl_defaultColor="@color/white"
    tools:fl_disabledColor="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_height="wrap_content"
        >
        <com.apg.mobile.roundtextview.RoundTextView
            android:id="@+id/iconPresence"
            android:layout_width="@dimen/len_44"
            android:layout_height="@dimen/len_44"
            android:gravity="center"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textSize="@dimen/font_20"
            android:layout_margin="@dimen/len_4"
            app:textAllCaps="true"
            app:bgColor="@color/colorIconItem"
            app:allCorner="@dimen/len_44"
            tools:text="BK"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/len_4"
            >
            <com.servo.apptendance.views.TextViewTeach
                android:id="@+id/textNoms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16"
                android:layout_marginBottom="@dimen/len_8"
                android:singleLine="true"
                android:ellipsize="end"
                app:police="roboto_reg"
                tools:text="@string/app_name"
                />
            <com.servo.apptendance.views.TextViewTeach
                android:id="@+id/textMatricule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16"
                android:layout_marginBottom="@dimen/len_8"
                app:police="roboto_light"
                tools:text="@string/app_name"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/len_4"
                    >
                    <com.apg.mobile.roundtextview.RoundTextView
                        android:id="@+id/iconDebut"
                        android:layout_width="@dimen/len_16"
                        android:layout_height="@dimen/len_16"
                        android:gravity="center"
                        android:layout_margin="@dimen/len_2"
                        app:textAllCaps="true"
                        app:bgColor="@color/colorAccentWhatsapp"

                        />
                    <com.servo.apptendance.views.TextViewTeach
                        android:id="@+id/textDebut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_12"
                        android:singleLine="true"
                        android:ellipsize="start"
                        app:police="roboto_reg"
                        tools:text="22/03 08h00'"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearFin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    >
                    <com.apg.mobile.roundtextview.RoundTextView
                        android:id="@+id/iconFin"
                        android:layout_width="@dimen/len_16"
                        android:layout_height= "@dimen/len_16"
                        android:gravity="center"
                        android:layout_margin="@dimen/len_2"
                        app:textAllCaps="true"
                        app:bgColor="@color/colorRedError"
                        />
                    <com.servo.apptendance.views.TextViewTeach
                        android:id="@+id/textFin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_12"
                        android:singleLine="true"
                        android:ellipsize="start"
                        app:police="roboto_reg"
                        tools:text="22/03 19h00'"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.servo.apptendance.views.FancyLayoutBK>
